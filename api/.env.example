# Server Configuration
PORT=5002
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration (required in production)
# ORIGIN_URL=https://dynainfo.com.co

# Database Configuration
TABLE_PREFIX=dyna_

# ClickHouse Configuration (External Database)
CLICKHOUSE_HOST=10.10.20.12
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USERNAME=your_username
CLICKHOUSE_PASSWORD=your_password

# PostgreSQL Configuration (Auth Database)
POSTGRES_URL=postgresql://dynainfo:dynainfo_dev@localhost:5432/dynainfo

# Better Auth Configuration
BETTER_AUTH_SECRET=generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:5002

# Resend Email Configuration
RESEND_API_KEY=re_your_key_here

# SSO Configuration (Dyna system integration)
SSO_SECRET_KEY=your_sso_secret_key_here

# Seed Script Configuration (optional)
SUPERADMIN_EMAIL=admin@dynainfo.com
SUPERADMIN_NAME=Super Admin

# SSL Certificates (Production only)
# Certificates should be placed in api/ssl/ directory:
# - ssl/dynainfo.key (private key - chmod 600)
# - ssl/dynainfo.crt (server certificate)
# - ssl/ca.crt (CA chain)
# These are automatically loaded when NODE_ENV=production
